                    <a href="#summary" class="nav-link">Summary</a>
'''

    # Add developer navigation links
    for dev in sorted(developer_activity.keys()):
        html += f'                    <a href="#dev-{dev}" class="nav-link">{dev}</a>\n'

    html += '''                </div>
            </div>
        </div>
    </div>

    <div class="container">

        <div id="summary" class="summary">
